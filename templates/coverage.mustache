<div style="padding: 0 1rem">
    <h1>Secrets</h1>
    <form method="POST">
        <input name="question" placeholder="What do you want to know?" />
        <button type="submit">Find out</button>
    </form>

    {{# answer }}
    <div>
        <p><strong>{{ question }}</strong></p>
        <p>{{ answer }}</p>
    </div>
    {{/ answer }}

</div>
